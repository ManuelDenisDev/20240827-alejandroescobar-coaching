---
//  =====================  DEPENDENCIAS  ===========================
import { Icon } from 'astro-icon/components'

//  =====================  INTERFACES  =============================
interface CardSobreMiProps {
  icono: string
  titulo: string
  descripcion: string
}

const { icono, titulo = 'Titulo', descripcion = 'Descripcion' } = Astro.props
---

<div class='rounded-xl border px-10 py-6'>
  <div class='flex items-center gap-4'>
    <div class='flex size-12 shrink-0 items-center justify-center rounded-full fondo text-gray-600'>
      <Icon name={icono} class='size-8 text-white' />
    </div>
    <h3 class='text-2xl font-semibold text-gray-600 underline decoration-amber-500'>{titulo}</h3>
  </div>
  <p class='mt-2 text-eden-800'>
    {descripcion}
  </p>
</div>

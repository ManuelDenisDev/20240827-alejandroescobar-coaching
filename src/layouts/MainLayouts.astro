---
import Header from "@components/Header.astro";
import Themes from "astro-themes";
import "@styles/global.css";
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <Themes defaultTheme="dark" />
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Coaching para emprendedores | Profesionaliza tu negocio</title>
  </head>
  <body class="flex min-h-full flex-col font-sans antialiased">
    <Header />
    <slot />
  </body>
</html>

<style>
  html {
    --background-color: #ffffff;
    --text-primary: #00ac8a;
    --text-primary-strong: #115e59;
    --text-primary-medium: #a1b58f;
    --text-primary-accent: #cdddc0;

    color: var(--text-primary);
    background-color: var(--background-color);
  }

  /* [data-theme="dark"] {
    --background-color: black;
    --text-color: white;
  } */
</style>
